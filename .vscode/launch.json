{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Woodpecker CI",
      "configurations": [
        "Woodpecker UI",
        "Woodpecker server",
        "Woodpecker agent"
      ],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Woodpecker server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/server/",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Woodpecker agent",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/agent/",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Go: current file",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "program": "${file}"
    },
    {
      "name": "Woodpecker UI",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "start",
      ],
      "cwd": "${workspaceFolder}/web",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/web/**",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
