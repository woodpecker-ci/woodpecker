{
  "extends": "./tsconfig.json",
  "include": ["src/theme"],
  "exclude": ["node_modules", "**/__tests__/**/*", "**/dist/**/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "esnext",
    "jsx": "preserve",
    "strict": false
  }
}
