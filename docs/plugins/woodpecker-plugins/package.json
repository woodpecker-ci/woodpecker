  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^2.4.0",
    "@docusaurus/theme-classic": "^2.4.0",
    "@docusaurus/types": "^2.4.0",
    "@tsconfig/docusaurus": "^1.0.7",
    "@types/marked": "^4.0.8",
    "@types/node": "^18.15.11",
    "axios": "^0.27.2",
    "concurrently": "^7.6.0",
    "marked": "^4.3.0",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "fuse.js": "^6.6.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "yaml": "^2.2.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
